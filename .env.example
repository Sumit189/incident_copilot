# Service/App Name Configuration
# Change this to match your service/app name used in Loki logs
SERVICE_NAME=app_name

# Grafana Loki Configuration
GRAFANA_HOST=https://your_grafana_instance.grafana.net
GRAFANA_BASICAUTH=your_basic_auth_here

# Time window in seconds to look back for logs
LOOKUP_WINDOW_SECONDS=600

# Email Configuration (Gmail OAuth)
GMAIL_CLIENT_ID=your_client_id
GMAIL_CLIENT_SECRET=your_client_secret
GMAIL_REFRESH_TOKEN=your_refresh_token
GMAIL_USER_EMAIL=your_email@gmail.com

# On-Call Engineers
ON_CALL_ENGINEERS=["email@example.com"]

# GitHub Configuration
GITHUB_TOKEN=your_github_token
GITHUB_REPO=owner/repo
GITHUB_BASE_BRANCH=main

# Post-Process Configuration
# Optional: URL to trigger after the automated triage workflow (e.g., webhook)
POST_PROCESS_URL=https://example.com/webhook

# Telemetry Configuration
# Providers: loki, prometheus
TELEMETRY_PROVIDER_LOGS=loki
TELEMETRY_PROVIDER_METRICS=prometheus
PROMETHEUS_HOST=http://prometheus:9090
# PROMETHEUS_BASICAUTH=user:password

# Output Configuration
# Set to true to save JSON artifacts and email copies to output/ directory
SAVE_OUTPUT=true

# Mock Prometheus Configuration
MOCK_CPU=high
MOCK_RAM=mid
MOCK_NETWORK=low
